<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>
  <params>
    <pitch>instrumentation/attitude-indicator[1]/indicated-pitch-deg</pitch>
    <bank>instrumentation/attitude-indicator[1]/indicated-roll-deg</bank>
    <horizon>instrumentation/attitude-indicator[1]/horizon-deflection-norm</horizon>
    <horizon-offset>instrumentation/attitude-indicator[1]/horizon-offset-norm</horizon-offset>
    <vertical>instrumentation/attitude-indicator[1]/vertical-deflection-norm</vertical>
    <fd>instrumentation/attitude-indicator[1]/flightdirector-flag</fd>
    <g>instrumentation/attitude-indicator[1]/spin</g>
  </params>

  <path>AttitudeIndicator.ac</path>

  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <object-name>Sphere</object-name>
    <object-name>Horizon</object-name>
    <object-name>HorizonBar</object-name>
    <object-name>VerticalBar</object-name>
    <object-name>Marker</object-name>
    <object-name>FD</object-name>
    <object-name>G</object-name>
    <emission include="InstrumentLightEmissionInclude.xml"/>
  </animation>

  <animation>
    <type>select</type>
    <object-name>FD</object-name>
    <condition>
      <property alias="/params/fd"/>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>G</object-name>
    <condition>
      <less-than>
        <property alias="/params/g"/>
        <value>0.5</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>HorizonBar</object-name>
    <property alias="/params/horizon"/>
    <factor>0.039</factor>
    <axis>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Horizon</object-name>
    <property alias="/params/horizon-offset"/>
    <factor>0.0039</factor>
    <axis>
      <z>1</z>
    </axis>
  </animation>
    
  <animation>
    <type>translate</type>
    <object-name>VerticalBar</object-name>
    <property alias="/params/vertical"/>
    <factor>0.039</factor>
    <axis>
      <y>1</y>
    </axis>
  </animation>
    
  <animation>
    <type>rotate</type>
    <object-name>BankIndicator</object-name>
    <object-name>Sphere</object-name>
    <property alias="/params/bank"/>
    <factor>1.0</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Sphere</object-name>
    <property alias="/params/pitch"/>
    <interpolation>
      <entry>
        <ind>-45.0</ind>
        <dep>-30.0</dep>
      </entry>
      <entry>
        <ind>45.0</ind>
        <dep>30.0</dep>
      </entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <center>
      <x-m>-0.060</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>KnobPickL</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property alias="/params/horizon-offset"/>
        <step>-0.1</step>
        <min>-1</min>
        <max>1</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>KnobPickR</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property alias="/params/horizon-offset"/>
        <step>0.1</step>
        <min>-1</min>
        <max>1</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>Knob</object-name>
    <visible>true</visible>
    <action>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property alias="/params/horizon-offset"/>
        <step>-0.1</step>
        <min>-1</min>
        <max>1</max>
        <wrap>0</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property alias="/params/horizon-offset"/>
        <step>0.1</step>
        <min>-1</min>
        <max>1</max>
        <wrap>0</wrap>
      </binding>
    </action>
  </animation>

</PropertyList>
