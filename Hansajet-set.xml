<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--
-->
<PropertyList>
  <sim>

    <description>Hamburger Flugzeugbau HFB Hansajet</description>
    <author>Torsten Dreyer</author>
    <aircraft-version>0.1</aircraft-version>
    <status>early development</status>
    <flight-model>jsb</flight-model>
    <aero>Hansajet-jsbsim</aero>

    <startup>
      <splash-texture>Aircraft/Hansajet/Splash.rgb</splash-texture>
    </startup>

    <model>
      <path>Aircraft/Hansajet/Models/Hansajet.xml</path>
      <Hansajet>
        <lod>
          <cockpit type="double">10</cockpit>
        </lod>
        <shadows>
          <cockpit type="bool">0</cockpit>
        </shadows>
        <sound>
          <volume>
            <cockpit type="double">5</cockpit>
          </volume>
        </sound>
      </Hansajet>
      <instrument-lighting>
        <emission>
          <red type="double">1</red>
          <green type="double">0.5</green>
          <blue type="double">0.5</blue>
        </emission>
      </instrument-lighting>
      <cockpit-lighting>
        <emission>
          <red type="double">0.3</red>
          <green type="double">0.0</green>
          <blue type="double">0.0</blue>
        </emission>
      </cockpit-lighting>
    </model>

    <rendering>
      <camera-group>
        <znear type="double">0.1</znear>
      </camera-group>
    </rendering>

    <view n="0">
      <name>Cockpit Left Seat</name>
      <type>lookfrom</type>
      <internal type="bool">true</internal>
      <config>
        <x-offset-m type="double">-0.35</x-offset-m>
        <y-offset-m type="double">2.38</y-offset-m>
        <z-offset-m type="double">-6.2</z-offset-m>
        <pitch-offset-deg>-15</pitch-offset-deg>
        <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
        <ground-level-nearplane-m type="double">0.01</ground-level-nearplane-m>
      </config>
    </view>

    <view n="101">
      <name>Cockpit Right Seat</name>
      <type>lookfrom</type>
      <internal type="bool">true</internal>
      <config>
        <from-model type="bool">true</from-model>
        <from-model-idx type="int">0</from-model-idx>
        <ground-level-nearplane-m type="double">0.01</ground-level-nearplane-m>
        <default-field-of-view-deg type="double">55</default-field-of-view-deg>
        <pitch-offset-deg>-15</pitch-offset-deg>
        <x-offset-m type="double">0.35</x-offset-m>
        <y-offset-m type="double">2.38</y-offset-m>
        <z-offset-m type="double">-6.2</z-offset-m>
      </config>
    </view>

    <view n="102">
      <name>Fuel&amp;Hydraulics Panel</name>
      <type>lookfrom</type>
      <internal archive="y">true</internal>
      <config>
        <from-model type="bool">true</from-model>
        <from-model-idx type="int">0</from-model-idx>
        <ground-level-nearplane-m type="double">0.01</ground-level-nearplane-m>
        <default-field-of-view-deg type="double">55</default-field-of-view-deg>
        <pitch-offset-deg>-89</pitch-offset-deg>
        <x-offset-m archive="y"> 0.000 </x-offset-m> <!--Right-->
        <y-offset-m archive="y"> 2.100 </y-offset-m> <!--Up-->
        <z-offset-m archive="y"> -6.900 </z-offset-m> <!--Back-->
      </config>
    </view>

    <view n="103">
      <name>Overhead Panel</name>
      <type>lookfrom</type>
      <internal archive="y">true</internal>
      <config>
        <from-model type="bool">true</from-model>
        <from-model-idx type="int">0</from-model-idx>
        <ground-level-nearplane-m type="double">0.01</ground-level-nearplane-m>
        <default-field-of-view-deg type="double">55</default-field-of-view-deg>
        <pitch-offset-deg>53</pitch-offset-deg>
        <x-offset-m archive="y"> 0.000 </x-offset-m> <!--Right-->
        <y-offset-m archive="y"> 2.380 </y-offset-m> <!--Up-->
        <z-offset-m archive="y"> -6.200 </z-offset-m> <!--Back-->
      </config>
    </view>

    <systems>
      <path>Aircraft/Hansajet/Systems/Hansajet-systems.xml</path>
      <autopilot>
        <path>Aircraft/Hansajet/Systems/Hansajet-autopilot.xml</path>
      </autopilot>
    </systems>

    <instrumentation>
      <path>Aircraft/Hansajet/Systems/Hansajet-instruments.xml</path>
    </instrumentation>

    <sound>
      <path>Aircraft/Hansajet/Hansajet-sound.xml</path>
    </sound>
    <hud>
      <enable3d>false</enable3d>
    </hud>
    <virtual-cockpit archive="y">true</virtual-cockpit>
    <allow-toggle-cockpit>true</allow-toggle-cockpit>


    <flaps>
      <setting>0.000</setting> <!-- Flaps 0 -->
      <setting>0.200</setting> <!-- Flaps 10 -->
      <setting>0.400</setting> <!-- Flaps 20 -->
      <setting>0.600</setting> <!-- Flaps 30 -->
      <setting>1.000</setting> <!-- Flaps 50 -->
    </flaps>

    <spoilers>
      <setting>0.000</setting> 
      <setting>1.000</setting> 
    </spoilers>

    <help include="help.xml"/>
  </sim>

  <input>
    <keyboard>
      <key n="89">
        <name>Y</name>
        <desc>Disable Yaw damper</desc>
        <binding>
          <command>property-assign</command>
          <property>/instrumentation/autopilot/yaw-damper</property>
          <value>0</value>
        </binding>
      </key>
      <key n="121">
        <name>y</name>
        <desc>Enable Yaw damper</desc>
        <binding>
          <command>property-assign</command>
          <property>/instrumentation/autopilot/yaw-damper</property>
          <value>1</value>
        </binding>
      </key>
    </keyboard>
  </input>

  <controls>
    <engines>
      <off type="bool">0</off>
    </engines>
    <gear>
      <brake-parking type="bool">1</brake-parking>
    </gear>
    <lighting>
      <landing-lights type="bool" n="0">0</landing-lights>
      <landing-lights type="bool" n="1">0</landing-lights>
      <taxi-light type="bool" >0</taxi-light>
      <nav-lights type="bool">0</nav-lights>
      <beacon type="bool">0</beacon>
    </lighting>
  </controls>
<!--
  <engines>
    <engine n="0">
      <n1>30</n1>
      <running>1</running>
    </engine>
    <engine n="1">
      <n1>30</n1>
      <running>1</running>
    </engine>
  </engines>
-->
  <systems>
    <pitot n="0">
      <serviceable type="bool" archive="y">true</serviceable>
    </pitot>
    <pitot n="1">
      <serviceable type="bool" archive="y">true</serviceable>
    </pitot>

    <static n="0">
      <serviceable type="bool" archive="y">true</serviceable>
      <pressure-inhg type="double" archive="y">29.92</pressure-inhg>
    </static>
    <static n="1">
      <serviceable type="bool" archive="y">true</serviceable>
      <pressure-inhg type="double" archive="y">29.92</pressure-inhg>
    </static>

  </systems>

  <instrumentation>
    <altimeter n="0">
      <serviceable type="bool" archive="y">true</serviceable>
      <setting-inhg type="double" archive="y">29.92</setting-inhg>
    </altimeter>
    <altimeter n="1">
      <serviceable type="bool" archive="y">true</serviceable>
      <setting-inhg type="double" archive="y">29.92</setting-inhg>
    </altimeter>
    <airspeed-indicator n="0">
      <serviceable type="bool" archive="y">true</serviceable>
    </airspeed-indicator>
    <airspeed-indicator n="1">
      <serviceable type="bool" archive="y">true</serviceable>
    </airspeed-indicator>
    <vertical-speed-indicator n="0">
      <serviceable type="bool" archive="y">true</serviceable>
    </vertical-speed-indicator>
    <vertical-speed-indicator n="1">
      <serviceable type="bool" archive="y">true</serviceable>
    </vertical-speed-indicator>
    <slip-skid-ball n="0">
      <serviceable type="bool" archive="y">true</serviceable>
    </slip-skid-ball>
    <slip-skid-ball n="1">
      <serviceable type="bool" archive="y">true</serviceable>
    </slip-skid-ball>
    <turn-indicator n="0">
      <serviceable type="bool" archive="y">true</serviceable>
    </turn-indicator>
    <turn-indicator n="1">
      <serviceable type="bool" archive="y">true</serviceable>
    </turn-indicator>

    <adf n="0">
      <serviceable type="bool" archive="y">true</serviceable>
      <frequencies>
        <selected-khz type="int">543</selected-khz>
        <standby-khz type="int">1234</standby-khz>
      </frequencies>
      <indicated-bearing-deg type="double">90</indicated-bearing-deg>
      <error-deg type="double">2</error-deg>
      <mode>adf</mode>
      <rotation-deg type="double">0</rotation-deg>
      <volume-norm type="double">0.5</volume-norm>
    </adf>


    <adf n="1">
      <serviceable type="bool" archive="y">true</serviceable>
      <frequencies>
        <selected-khz type="int">654</selected-khz>
        <standby-khz type="int">1234</standby-khz>
      </frequencies>
      <indicated-bearing-deg type="double">90</indicated-bearing-deg>
      <error-deg type="double">2.5</error-deg>
      <mode>adf</mode>
      <rotation-deg type="double">0</rotation-deg>
      <volume-norm type="double">0.5</volume-norm>
    </adf>

  </instrumentation>

  <nasal>
    <Hansajet>
      <file>Aircraft/Hansajet/Nasal/Hansajet.nas</file>
      <file>Aircraft/Hansajet/Nasal/WheelSpinner.nas</file>
      <file>Aircraft/Hansajet/Nasal/SelectorSwitch.nas</file>
      <file>Aircraft/Hansajet/Models/Radio/kr87.nas</file>
      <script><![CDATA[
        kr87.new("/instrumentation/adf[0]");
        kr87.new("/instrumentation/adf[1]");
        SelectorSwitch.new( 
          "instrumentation/rmi[0]/needle1-switch-position",
          "instrumentation/rmi[0]/needle1-rotation-deg", [
          "instrumentation/nav[0]/relative-bearing-deg",
          "instrumentation/adf[0]/indicated-bearing-deg"
          ]);
        SelectorSwitch.new( 
          "instrumentation/rmi[0]/needle2-switch-position",
          "instrumentation/rmi[0]/needle2-rotation-deg", [
          "instrumentation/nav[1]/relative-bearing-deg",
          "instrumentation/adf[1]/indicated-bearing-deg"
          ]);
        SelectorSwitch.new( 
          "instrumentation/rmi[1]/needle1-switch-position",
          "instrumentation/rmi[1]/needle1-rotation-deg", [
          "instrumentation/nav[0]/relative-bearing-deg",
          "instrumentation/adf[0]/indicated-bearing-deg"
          ]);
        SelectorSwitch.new( 
          "instrumentation/rmi[1]/needle2-switch-position",
          "instrumentation/rmi[1]/needle2-rotation-deg", [
          "instrumentation/nav[1]/relative-bearing-deg",
          "instrumentation/adf[1]/indicated-bearing-deg"
          ]);
      ]]></script>
    </Hansajet>
    <Autopilot>
      <file>Aircraft/Hansajet/Systems/Hansajet-autopilot.nas</file>
      <script><![CDATA[
        Autopilot.new();
        FlightDirector.new(0, "/instrumentation/attitude-indicator[0]" );
      ]]></script>
    </Autopilot>
  </nasal>

  <limits>
    <max-flap-extension-speed>
      <flaps>0.40</flaps>
      <speed>190</speed>
    </max-flap-extension-speed>
    <max-flap-extension-speed>
      <flaps>1.00</flaps>
      <speed>175</speed>
    </max-flap-extension-speed>
    <max-slat-extension-speed>200</max-slat-extension-speed>
    <max-gear-extension-speed>170</max-gear-extension-speed>
    <vne>300</vne> <!-- FIXME: need to put the real value here -->
  </limits>
</PropertyList>
